pipeline {
    agent {
        label 'docker-agent'
    }
                  
    stages { 
        stage('Prepare Environment') {
            steps {
                sh '''
                cd Chapter08/sample1
                chmod +x gradlew
                ls -l gradlew
                '''
            }
        }
                
        stage('Compile') {
            steps {
                sh '''
                cd Chapter08/sample1
                ./gradlew compileJava
                '''
            }
        }

        stage('Unit test') {
            steps {
                sh '''
                cd Chapter08/sample1
                ./gradlew test
                '''
            }
        }
             
        stage('Code coverage') {
            when {
                branch 'master'  // Ensure it matches your repository's default branch
            }
            steps {
                sh '''
                cd Chapter08/sample1
                ./gradlew jacocoTestReport
                '''
                publishHTML(target: [
                    reportDir: 'Chapter08/sample1/build/reports/jacoco/test/html',
                    reportFiles: 'index.html',
                    reportName: "JaCoCo Code Coverage"
                ])
            }
        }

        // REMOVED Static Code Analysis Stage (Checkstyle Disabled)
        
        stage('Validate Branch Name') {
            when {
                not {
                    anyOf {
                        branch 'master'  // Ensure it matches your repository's default branch
                        expression { return env.BRANCH_NAME =~ /.*feature.*/ }
                    }
                }
            }
            steps {
                error 'This branch is neither master nor a feature branch. Pipeline fails!'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}


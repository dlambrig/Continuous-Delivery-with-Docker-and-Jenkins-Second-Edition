pipeline {
    agent {
        kubernetes {
            containerTemplate {
                name 'gradle'
                image 'gradle'
                command 'sleep'
                args '30d'
            }
        }
    }
    stages {
        stage('clone repo and make gradlew executable') {
            steps {
                git url: 'https://github.com/bookmil/Continuous-Delivery-with-Docker-and-Jenkins-Second-Edition', branch: 'master'
                sh '''
                    cd Chapter08/sample1
                    chmod +x gradlew
                '''            
            }
        }
        stage('run gradle test') {
            steps {
                sh '''
                    cd Chapter08/sample1
                    ./gradlew test
                '''
            }
        }
    }
}

   